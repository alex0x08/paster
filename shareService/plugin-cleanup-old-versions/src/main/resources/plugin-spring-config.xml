<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       default-lazy-init="false"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context 
          http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <bean name="cleanupOldVersionsJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="uber.megashare.plugin.cleanup.job.CleanupOldVersionsJob"/>
    </bean>
  
    
  
  
    <bean id="cleanupOldVersionsTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
        <property name="jobDetail" ref="cleanupOldVersionsJob"/>
        <property name="startDelay" value="3000"/>
        <property name="repeatInterval" value="3000"/>
    </bean>
    
    
    
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="cleanupOldVersionsTrigger"/>
                 
            </list>
        </property>
        <property name="applicationContextSchedulerContextKey" value="applicationContext"/>
    </bean>



</beans>
